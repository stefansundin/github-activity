{
  "name": "GitHub Activity",
  "description": "GitHub Activity RSS Feed",
  "repository": "https://github.com/stefansundin/github-activity",
  "website": "https://github.com/stefansundin/github-activity",
  "logo": "https://stefansundin.github.io/github-activity/img/icon128.png",
  "success_url": "/",
  "addons": ["heroku-redis:hobby-dev"],
  "keywords": ["github", "gist", "rss"],
  "env": {
    "RACK_ENV": "production",
    "GITHUB_CLIENT_ID": {
      "description": "(Optional) Your GitHub app client id",
      "required": false
    },
    "GITHUB_CLIENT_SECRET": {
      "description": "(Optional) Your GitHub app client secret",
      "required": false
    },
    "ENCRYPTION_KEY": {
      "description": "(Optional) Encryption key for authenticated tokens. Generate with `rake secret`.",
      "required": false
    }
  }
}
