{
  "name": "GitHub Activity",
  "description": "GitHub Activity RSS Feed",
  "repository": "https://github.com/stefansundin/github-activity",
  "website": "https://github.com/stefansundin/github-activity",
  "logo": "https://stefansundin.github.io/github-activity/img/icon128.png",
  "success_url": "/",
  "addons": ["rediscloud:25"],
  "keywords": ["github", "gist", "rss"],
  "env": {
    "RACK_ENV": "production",
    "GITHUB_CLIENT_ID": {
      "description": "Your GitHub Client ID",
      "required": false
    },
    "GITHUB_CLIENT_SECRET": {
      "description": "Your GitHub Client Secret",
      "required": false
    },
    "AIRBRAKE_HOST": {
      "description": "Your Airbrake provider (AppEnlight is free but you have to register)",
      "required": false,
      "value": "api.appenlight.com"
    },
    "AIRBRAKE_KEY": {
      "description": "Your Airbrake key",
      "required": false
    }
  }
}
